<?xml version="1.0" encoding="UTF-8"?><shape xmlns:android="http://schemas.android.com/apk/res/android"    android:shape="rectangle">    <!-- 填充的颜色 -->    <solid android:color="@color/light_green" />    <!-- 设置按钮的四个角为弧形 -->    <corners android:radius="360dp" />    <!-- 圆角的程度 -->    <!-- padding：Button里面的文字与Button边界的间隔 -->    <padding        android:bottom="1dip"        android:left="8dip"        android:right="8dip"        android:top="1dip" /></shape>