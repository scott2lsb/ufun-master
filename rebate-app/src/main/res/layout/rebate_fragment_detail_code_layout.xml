<?xml version="1.0" encoding="utf-8"?><!-- 显示核销码 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rebate_code_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottom_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rebate_code1_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rebate_code_first"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rebate_code1"
                style="@style/white_title.42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rebate_code2_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/rebate_code"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rebate_code2"
                style="@style/white_title.42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rebate_code3_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/rebate_code"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rebate_code3"
                style="@style/white_title.42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rebate_code4_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/rebate_code"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rebate_code4"
                style="@style/white_title.42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rebate_code5_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/rebate_code"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rebate_code5"
                style="@style/white_title.42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rebate_code6_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/rebate_code_last"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rebate_code6"
                style="@style/white_title.42sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/rebate_detail_code_tips"
        style="@style/black_title.16sp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/rebate_code_indicate_pay"
        android:paddingBottom="25dp"
        android:paddingTop="15dp"
        android:text="@string/rebate_detail_code_tips" />

</LinearLayout>