<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/myrebate_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/myrebate_header_shopname"
            style="@style/black_title.16sp"
            android:layout_gravity="left"
            android:drawableLeft="@drawable/rebate_shop_icon"
            android:drawablePadding="2dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/myrebate_header_state"
            style="@style/white_title.14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_green_corner"
            android:gravity="center"
            android:text="@string/rebate_my_waitting_for_pay" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/myrebate_header_layout"
        android:background="@color/line_color" />

</RelativeLayout>