<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rebate_top_layout"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/topbar_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rebate_top_btn_return"
            style="@style/black_title.14sp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/btn_back_selector"
            android:gravity="center_vertical"
            android:singleLine="true" />

        <com.shengshi.rebate.widget.DrawableCenterEditText
            android:id="@+id/rebate_search"
            style="@style/black_title.18sp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/edit_gray_bg"
            android:drawableLeft="@drawable/icon_indicate_search"
            android:ellipsize="start"
            android:hint="@string/rebate_top_bar_edit_tip"
            android:padding="5dp"
            android:singleLine="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rebate_top_title"
            style="@style/black_title.18sp"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="160dp"
            android:singleLine="true" />

        <RelativeLayout
            android:id="@+id/rebate_top_right_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/rebate_top_right_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/rebate_top_refresh_progressbar"
                style="?android:attr/progressBarStyleSmallInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rebate_top_right_title"
                style="@style/gray_title.12sp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:singleLine="true"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>