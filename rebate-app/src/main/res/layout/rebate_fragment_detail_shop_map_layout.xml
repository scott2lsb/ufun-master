<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/rebate_widget_line_layout" />

    <RelativeLayout
        android:id="@+id/rebate_detail_shop_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/rebate_detail_first_shop_name"
            style="@style/black_title.18sp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/rebate_shop_distance_latest_flag"
            style="@style/white_title.12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_green_corner"
            android:gravity="center_vertical"
            android:text="@string/rebate_shop_latest_tip" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/rebate_detail_shop_map_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rebate_fitst_shop_address_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rebate_listitem_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rebate_fitst_shop_address"
                style="@style/gray_title.selector.14sp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/rebate_shop_map"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="120dip"
            android:layout_marginBottom="10dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/rebate_first_shop_telphone_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rebate_listitem_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/rebate_first_shop_telphone"
                style="@style/gray_title.selector.14sp"
                android:drawableTop="@drawable/rebate_shop_tel" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/rebate_widget_line_layout" />

    <!-- 第二家商店 -->

    <LinearLayout
        android:id="@+id/rebate_detail_second_shop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_f8f8f8"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/rebate_detail_second_shop_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:id="@+id/rebate_detail_second_shop_name"
                style="@style/black_title.18sp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/rebate_second_shop_distance_latest_flag"
                style="@style/white_title.12sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/green"
                android:gravity="center_vertical"
                android:text="@string/rebate_shop_latest_tip"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/rebate_detail_second_shop_map_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rebate_second_shop_address_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rebate_listitem_bg_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rebate_second_shop_address"
                    style="@style/gray_title.selector.14sp"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/rebate_shop_map"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="4"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="120dip"
                android:layout_marginBottom="10dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/rebate_second_shop_telphone_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rebate_listitem_bg_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/rebate_second_shop_telphone"
                    style="@style/gray_title.selector.14sp"
                    android:drawableTop="@drawable/rebate_shop_tel" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/line_color" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rebate_detail_all_shop_tips_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rebate_listitem_bg_selector"
        android:clickable="true"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/rebate_detail_all_shop_count"
            style="@style/black_title.selector.18sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" />

        <ImageView
            style="@style/black_title.12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/rebate_arrow_left_more" />
    </RelativeLayout>

    <include layout="@layout/rebate_widget_line_layout" />

</LinearLayout>