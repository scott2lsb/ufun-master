<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addcard_secondlistitem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitembg"
    android:orientation="vertical"
    android:padding="11dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shengshi.base.widget.roundimageview.CircleImageView
            android:id="@+id/homelistitem_avatar_iv"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="11dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homelistitem_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/design_size_24" />

                <TextView
                    android:id="@+id/homelistitem_replycount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_heading_text"
                    android:textSize="@dimen/design_size_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homelistitem_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_heading_text"
                    android:textSize="@dimen/design_size_20" />

                <TextView
                    android:id="@+id/homelistitem_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/main_tab_tv_active"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:layout_marginLeft="3dip"
                    android:textSize="@dimen/design_size_16"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/homelistitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:maxLines="2"
        android:layout_marginTop="11dip"
        android:layout_marginBottom="13dip"
        android:textSize="@dimen/design_size_28" />

    <LinearLayout
        android:id="@+id/homelistitem_hasimg_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homelistitem_hasimg_oneiv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/login_line"
            android:scaleType="centerCrop"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/homelistitem_hasimg_twoiv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip"
            android:layout_weight="1"
            android:background="@color/login_line"
            android:scaleType="centerCrop"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/homelistitem_hasimg_threeiv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/login_line"
            android:scaleType="centerCrop"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homelistitem_hastwoimg_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homelistitem_hastwoimg_oneiv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/login_line"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/homelistitem_hastwoimg_twoiv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip"
            android:layout_weight="1"
            android:background="@color/login_line"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/login_line"
            android:scaleType="centerCrop"
            android:visibility="invisible" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/homelistitem_onlyoneimg_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homelistitem_onlyoneimg_iv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/default_album_pictures"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>