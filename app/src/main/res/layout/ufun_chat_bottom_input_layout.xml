<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_input"
            style="@style/edittext"
            android:layout_width="0dp"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_weight="7"
            android:background="@drawable/lifecircle_chat_bottom_input_background"
            android:gravity="center_vertical"
            android:textSize="@dimen/design_size_28" />

        <Button
            android:id="@+id/ufun_tip_msg_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dip"
            android:layout_weight="3"
            android:background="@drawable/ufun_grey"
            android:text="@string/ufun_chat_send" />

    </LinearLayout>

</LinearLayout>