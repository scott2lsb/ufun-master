<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ufun_topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minetopic_starttv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mine_mytopic_mythread"
            android:textColor="@color/main_tab_tv_active"
            android:textSize="@dimen/design_size_24" />

        <View
            android:layout_width="0.3dip"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/minetopic_jointv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mine_mytopic_mycomment"
            android:textColor="@color/headding_text"
            android:textSize="@dimen/design_size_24" />
    </LinearLayout>

    <include layout="@layout/widget_loading_bar_layout" />

    <com.shengshi.base.widget.xlistview.XListView
        android:id="@id/mGeneralListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/line_color"
        android:dividerHeight="0.3dip"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>