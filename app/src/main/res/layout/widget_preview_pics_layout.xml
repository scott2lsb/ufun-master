<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picture_preview_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/picture_preview_first_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/onefv_pic"
                android:layout_width="80dip"
                android:layout_height="80dip">

                <com.shengshi.ufun.weight.RoundedImageView
                    android:id="@+id/one_pic"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_photo_add_middle" />
            </FrameLayout>

            <TextView
                android:id="@+id/one_pic_text_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dip"
                android:text="@string/one_pic_text_tip"
                android:textColor="#aaa"
                android:textSize="@dimen/design_size_24" />
        </LinearLayout>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <FrameLayout
            android:id="@+id/twofv_pic"
            android:layout_width="80dip"
            android:layout_height="80dip">

            <com.shengshi.ufun.weight.RoundedImageView
                android:id="@+id/two_pic"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_photo_add_middle"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <FrameLayout
            android:id="@+id/threefv_pic"
            android:layout_width="80dip"
            android:layout_height="80dip">

            <com.shengshi.ufun.weight.RoundedImageView
                android:id="@+id/three_pic"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_photo_add_middle"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <FrameLayout
            android:id="@+id/fourfv_pic"
            android:layout_width="80dip"
            android:layout_height="80dip">

            <com.shengshi.ufun.weight.RoundedImageView
                android:id="@+id/four_pic"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_photo_add_middle"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/picture_preview_second_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/fivefv_pic"
            android:layout_width="80dip"
            android:layout_height="80dip">

            <com.shengshi.ufun.weight.RoundedImageView
                android:id="@+id/five_pic"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_photo_add_middle"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <FrameLayout
            android:id="@+id/sixfv_pic"
            android:layout_width="80dip"
            android:layout_height="80dip">

            <com.shengshi.ufun.weight.RoundedImageView
                android:id="@+id/six_pic"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_photo_add_middle"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <FrameLayout
            android:id="@+id/sevenfv_pic"
            android:layout_width="80dip"
            android:layout_height="80dip">

            <com.shengshi.ufun.weight.RoundedImageView
                android:id="@+id/seven_pic"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_photo_add_middle"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <FrameLayout
            android:id="@+id/eightfv_pic"
            android:layout_width="80dip"
            android:layout_height="80dip">

            <com.shengshi.ufun.weight.RoundedImageView
                android:id="@+id/eight_pic"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_photo_add_middle"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>