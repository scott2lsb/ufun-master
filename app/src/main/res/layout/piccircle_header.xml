<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/piccircleheader_lin_quan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/theme_topclick_bg"
        android:orientation="horizontal"
        android:padding="15dip">

        <com.shengshi.base.widget.roundimageview.CircleImageView
            android:id="@+id/piccircleheader_iv"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="7dip"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dip"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/piccircleheader_nametv"
                style="@style/titletext" />

            <TextView
                android:id="@+id/piccircleheader_tv_titletv"
                style="@style/titletext_sub" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_indicate_more"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dip"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/piccircleheader_cameramanlv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/listitembg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/piccircleheader_cameramanTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_user"
                android:gravity="center"
                android:text="@string/cameraman"
                android:textColor="@color/headding_text"
                android:textSize="@dimen/design_size_24" />
        </LinearLayout>

        <View
            android:layout_width="0.3dip"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/piccircleheader_searchv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/listitembg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/search_icon"
                android:gravity="center"
                android:text="@string/search"
                android:textColor="@color/headding_text"
                android:textSize="@dimen/design_size_24" />
        </LinearLayout>

        <View
            android:layout_width="0.3dip"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/piccircleheader_taglv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/listitembg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/tag_icon"
                android:gravity="center"
                android:text="@string/tag"
                android:textColor="@color/headding_text"
                android:textSize="@dimen/design_size_24" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/piccircleheader_buttomline"
        android:layout_width="match_parent"
        android:layout_height="0.3dip"
        android:background="@color/gray" />

</LinearLayout>