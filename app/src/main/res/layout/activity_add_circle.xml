<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddCircleActivity">

    <include layout="@layout/ufun_topbar" />

    <include layout="@layout/widget_loading_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.shengshi.ufun.weight.CategoryListView
            android:id="@+id/addcircle_firstlist"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:cacheColorHint="#00000000"
            android:divider="@color/line_color"
            android:dividerHeight="0dip"
            android:listSelector="@color/transparent"
            android:background="@color/mine_top_bg"
            android:scrollbars="none" />

        <com.shengshi.ufun.weight.CategoryListView
            android:id="@+id/addcircle_secondlist"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:cacheColorHint="#00000000"
            android:divider="@color/line_color"
            android:listSelector="@color/transparent"
            android:background="@color/white"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>